{
  "name": "remorhaz/php-json-path",
  "description": "JSONPath implementation in PHP",
  "homepage": "https://github.com/remorhaz/php-json-path",
  "license": "MIT",
  "keywords": ["json", "jsonpath", "json path"],
  "authors": [
    {
      "name": "Edward Surov",
      "email": "zoohie@gmail.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.3",
    "ext-intl": "*",
    "ext-json": "*",
    "remorhaz/php-unilex": "^0.0.14",
    "nikic/php-parser": "^4.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.2",
    "phing/phing": "^2.16",
    "squizlabs/php_codesniffer": "^3.2.0",
    "infection/infection": "^0.14"
  },
  "autoload": {
    "psr-4": {
      "Remorhaz\\JSON\\Path\\": ["src/", "generated/"],
      "Remorhaz\\JSON\\Data\\": "src/Data/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Remorhaz\\JSON\\Path\\Test\\": "tests/",
      "Remorhaz\\JSON\\Data\\Test\\": "tests/Data/"
    }
  },
  "scripts": {
    "test": [
      "vendor/bin/phpunit --coverage-xml=build/log/coverage-xml --log-junit=build/log/phpunit.junit.xml"
    ],
    "infection": [
      "@test",
      "mkdir -p build/log/infection",
      "vendor/bin/infection --threads=4 --coverage=build/log --no-progress"
    ]
  }
}
